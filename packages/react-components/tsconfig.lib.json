{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "lib": ["ES2019", "dom"],
    "outDir": "dist",
    "declaration": true,
    "types": ["static-assets", "environment", "inline-style-expand-shorthand"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "**/*.stories.jsx"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "./src/**/*.jsx"]
}
