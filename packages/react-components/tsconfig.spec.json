{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "types": ["jest", "node", "inline-style-expand-shorthand"]
  },
  "include": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.d.ts",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.d.ts"
  ]
}
